<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5" xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="850">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <cefSharp:ChromiumWebBrowser Grid.Row="0" Name="wb"></cefSharp:ChromiumWebBrowser>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="15,10" Command="{Binding AuthCommand}" RenderTransformOrigin="-0.792,0.179" >Авторизоваться</Button>
    </Grid>
</Window>
