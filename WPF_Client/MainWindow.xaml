<Window x:Class="WPF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>

    <Grid >
        <DataGrid ItemsSource="{Binding Persons}"  AutoGenerateColumns="True" Margin="0,0,0,74"/>
        <Button Command="{Binding GetDataFromServer}"  Content="Получить данные" HorizontalAlignment="Left" Margin="104,350,0,0" VerticalAlignment="Top" Height="41" Width="214"/>
        <Button Command="{Binding UpdateDataInServer}"  Content="Сохранить данные" HorizontalAlignment="Left" Margin="350,350,0,0" VerticalAlignment="Top" Height="41" Width="214"/>


    </Grid>
</Window>
